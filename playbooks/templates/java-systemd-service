[Unit]
Description={{ java_service.name }}
After=syslog.target

[Service]
User=www-data
ExecStart=/usr/bin/java {{ java_options }} -jar {{ java_service.jar_file_path }}
SuccessExitStatus=143
StandardOutput=append:{{ logs_basedir }}/{{ java_service.name }}.log
StandardError=append:{{ logs_basedir }}/{{ java_service.name }}.log
{% for env_var in java_service.environment_variables %}
Environment={{ env_var }}
{% endfor %}

[Install]
WantedBy=multi-user.target
